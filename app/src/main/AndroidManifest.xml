<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:networkSecurityConfig="@xml/network_security_config"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Spatruck"
        tools:targetApi="31">

        <activity
            android:name=".TransporterProfile"
            android:exported="false"
            android:label="@string/title_activity_transporter_profile"
            android:theme="@style/Theme.Spatruck" />
        <activity
            android:name=".bottomNav"
            android:exported="false"
            android:label="@string/title_activity_bottom_nav"
            android:theme="@style/Theme.Spatruck" />
        <activity
            android:name=".TransporterActivity"
            android:exported="false"
            android:label="@string/title_activity_transporter"
            android:theme="@style/Theme.Spatruck" />
        <activity
            android:name=".CustomerDashboard"
            android:exported="false"
            android:label="@string/title_activity_customer_dashboard"
            android:theme="@style/Theme.Spatruck" />
        <activity
            android:name=".CustomerActivity"
            android:exported="false"
            android:label="@string/title_activity_customer"
            android:theme="@style/Theme.Spatruck" />
        <activity
            android:name=".CustomerInterface"
            android:exported="false"
            android:label="@string/title_activity_customer_interface"
            android:theme="@style/Theme.Spatruck" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Spatruck">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>